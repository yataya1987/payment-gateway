@model PaymentGateway.Models.ServiceProviderViewModels.ServiceProviderViewModel

@{
    ViewData["Title"] = "Edit";
    ViewData["ActivePage"] = LeftMenuNavPages.ServiceProviders;
}

<h2>Edit</h2>

<h4>ServiceProvider</h4>
